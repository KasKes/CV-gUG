---
// InitialenCV.astro
const { body, Content } = Astro.props;
---

<section class="lg:min-h-screen flex flex-col" id="initialen-cv-section">
  <div class="container mx-auto grid grid-cols-1 lg:grid-cols-2 gap-4">
    <!-- Linke Seite: SVG-Logos -->
    <div class="relative h-screen lg:h-auto overflow-hidden lg:overflow-visible flex items-end">
      <div class="flex flex-col items-start justify-end space-y-4 animate-slide-up lg:animate-none lg:opacity-100 absolute bottom-0 lg:bottom-auto lg:static pb-20">
      </div>
    </div>
    <div class="lg:sticky lg:top-[280px] self-start flex flex-col items-center justify-center min-h-screen lg:min-h-0">
      <div class="w-full max-w-3xl px-4 mb-8 lg:mb-0">
        <img
          src="/images/LogoCV/Campos-Viola-black-gug.svg"
          class="dark:hidden block w-full h-auto max-h-96"
          alt="Michael Campos Viola - Signatur in Schwarz"
          loading="lazy"
        />
        <img
          src="/images/LogoCV/Campos-Viola-white-gug.svg"
          class="hidden dark:block w-full h-auto max-h-96"
          alt="Michael Campos Viola - Signatur in WeiÃŸ"
          loading="lazy"
        />
      </div>
      <div class="w-full px-4">
        {body && 
          <div class="opacity-0 transition-opacity duration-1000 ease-in-out" id="content-text">
            <p class="content max-w-2xl mx-auto text-center">{Content && <Content />}</p>
          </div>
        }
      </div>
    </div>
    
  </div>
</section>
<script>
  const contentText = document.getElementById('content-text');

  function handleScroll() {
    if (window.scrollY > 100) { // Adjust this value to control when the text appears
      contentText.classList.add('opacity-100');
    } else {
      contentText.classList.remove('opacity-100');
    }
  }

  window.addEventListener('scroll', handleScroll);
</script>