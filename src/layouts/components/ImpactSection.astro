    <div class="container mx-auto grid grid-cols-1 lg:grid-cols-2 gap-4">
      <!-- Desktop Ansicht -->
      <div class="hidden lg:block">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {Object.entries(imagesCorporate).map(([path, image]) => (
            <div key={path} class="block">
              <img src={path.replace('/public', '')} alt="Corporate Image" class="w-full rounded h-auto" />
