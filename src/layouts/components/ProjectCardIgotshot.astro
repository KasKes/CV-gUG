---
import ImageMod from "@/components/ImageMod.astro";
import DynamicIcon from "@/helpers/DynamicIcon";
import { markdownify, slugify } from "@/lib/utils/textConverter";
import type { CollectionEntry } from "astro:content";
import dateFormat from "@/lib/utils/dateFormat";
interface Props {
  content: CollectionEntry<"igotshot-photo">;
}

const {
  content: {
    data: { title, path, date, tags, image, category },
    slug,
    collection,
  },
} = Astro.props;
---

<div class="relative overflow-hidden">
  <div class="group">
    <div
      class="md:overlay after:opacity-0 after:bg-igot/40 group-hover:after:opacity-100 after:duration-300">
      {
        image && (
          <a href={`/${collection}${path}${slug}/`} class="">
            <ImageMod
              src={image}
              width="full"
              height={640}
              class="w-full rounded"
              alt={title}
            />
          </a>
        )
      }
    </div>
  
  </div>
</div>
