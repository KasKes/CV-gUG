---
import Base from "@/layouts/Base.astro";
import { getSinglePage } from "@/lib/contentParser.astro";
import { getEntry } from "astro:content";
import PageHeader from "@/partials/PageHeader.astro";
import ImageMod from "@/components/ImageMod.astro";
import DynamicIcon from "@/helpers/DynamicIcon";
import { markdownify } from "@/lib/utils/textConverter";
import Social from "@/components/Social.astro";
import social from "@/config/social.json";
const {
  body,
  render,
  data: {
    title,
    meta_title,
    keywords,
    section,
    contacts,
    information,
    logo,
    logodark,
    description,
    image,
    tag,
    intro,
    intro1,
    intro2,
    intro3,
    intro4,
    intro5,
  },
} = await getEntry(
  "igotshot-photo",
  "lichtmalerei-mit-pixelstick-denkmalsommer-in-der-alten-muenze"
);
---

<Base
  title={title}
  image={image}
  keywords={keywords}
  section={section}
  meta_title={meta_title}
  description={description}
  body_class="page-color-dark-igotshot page-color-light-igotshot">
  <PageHeader class="h1" title={title} />
  <section class="pt-12">
    <div class="container">
      <div class="row items-start">
        <aside
        class="lg:col-4 lg:sticky lg:top-0 ms-sticky-sidebar"
        ms-sticky-top-offset="230"
        ms-sticky-bottom-offset="10">
        <div>
          <div class="text-center h-full rounded overflow-hidden group">
            {
              logo && (
                <img
                  src={logo}
                  width={300}
                  height="full"
                  alt={title ? title : "projekt image"}
                  class="dark:hidden w-full inline-block object-cover pb-8 object-center"
                />
              )
            }
            {
              logo && (
                <img
                  src={logodark}
                  width={300}
                  height="full"
                  alt={title ? title : "projekt image"}
                  class="hidden dark:inline-block w-full object-cover pb-8 object-center"
                />
              )
            }
            {
              information && (
                <div class="pt-2 px-4 text-base">
                  {information.map((info) => {
                    const { data, label, icon } = info;
                    return (
                      <div class="p-3 flex justify-between">
                        <p class=" font-primary m-0 text-base">
                          {icon && (
                            <DynamicIcon
                              className="inline-block me-2"
                              icon={icon}
                            />
                          )}
                          {label}
                        </p>
                        <span
                          class="text-end text-textdark dark:text-igot"
                          set:html={markdownify(data)}
                        />
                      </div>
                    );
                  })}
                </div>
              )
            }
            {
              tag && (
                <div class="px-4 pb-3 text-base">
                  {tag.map((info) => {
                    const { data, label, icon, link } = info;
                    return (
                      <div class="p-3 flex justify-between ">
                        <p class=" font-primary m-0 text-base">
                          {icon && (
                            <DynamicIcon
                              className="inline-block me-2"
                              icon={icon}
                            />
                          )}
                          {label}
                        </p>
                        <a class="border border-igot rounded-xl hover:bg-igot hover:text-bgweiss  dark:hover:text-bgdark py-1 px-4"
                          href={link}>
                        <span
                          class="text-end hover:text-textweiss "
                          set:html={markdownify(data)}
                        /></a>
                      </div>
                    );
                  })}
                </div>
              )
            }
            <div>
              {
                contacts && (
                  <>
                    <h2 class="h5 text-start ml-8" set:html="Information" />
                    <ul class="pl-0 mb-5 md:mb-10">
                      {contacts.map((contact) => {
                        const { id, link, icon } = contact;
                        if (!id) return null;
                        return (
                          <li class="text-color text-start ml-8 my-3">
                            {icon && (
                              <DynamicIcon
                                className="me-3 inline-block"
                                icon={icon}
                              />
                            )}
                            <a href={link}>
                              {id}
                            </a>
                          </li>
                        );
                      })}
                    </ul>
                  </>
                )
              }
            </div>
            <!-- Social Links -->
            <hr class="h-px my-2">
              <h2 class="h5 pt-2 text-start ml-8" set:html="Folge uns auf" />
                <p class="my-2 text-base text-start ml-8" set:html="Whatsapp, Instagram, LinkedIn, Vimeo" />
                <div class="py-4"> 
                  <Social source={social.main} className="social-icons" />
                </div>
          </div>
        </div>
      </aside>
        <article class="lg:col-8 justify-end items-end">
          <div class="row pb-10">
            <!-- //ANCHOR -  50 jahresfeier Denkmalschutz Bayern  Bild -->
            {
              intro.bilder && (
                <div class="col-12">
                  <div class="row justify-center lg:justify-normal content-around items-center">
                    {intro.bilder.map((item, index) => {
                      return (
                        <div class="col-12 text-center">
                          <a
                            href={item}
                            data-no-swup
                            class="glightbox"
                            data-gallery="gallery-group-1">
                            <ImageMod
                              src={item}
                              width="full"
                              height="full"
                              class="mx-auto rounded"
                              alt={intro.title}
                            />
                          </a>
                        </div>
                      );
                    })}
                  </div>
                </div>
              )
            }
            <!-- //ANCHOR - 50 jahresfeier Denkmalschutz Bayern  -->
            <section class="pb-8">
              <div class="h2">
                {intro.title}
              </div>
              <div class="text-3xl">
                {intro.subtitle}
              </div>
              <p class="pt-8 leading-relaxed">
                {intro.content}
              </p>
            </section>
            <!-- //ANCHOR -  Ideen und Konzeptentwicklung -->
            <section class="py-8">
              <div class="h2">
                {intro1.title}
              </div>
              <div class="text-3xl">
                {intro1.subtitle}
              </div>
              <!-- //ANCHOR -  Ideen und Konzeptentwicklung - Bilder -->
              {
                intro1.bilder && (
                  <div class="col-12">
                    <div class="row justify-center lg:justify-normal content-around items-center">
                      {intro1.bilder.map((item, index) => {
                        return (
                          <div class="col-12 lg:col-4 text-center pt-2">
                            <a
                              href={item}
                              data-no-swup
                              class="glightbox"
                              data-gallery="gallery-group-1">
                              <ImageMod
                                src={item}
                                width="full"
                                height="full"
                                class="mx-auto rounded"
                                alt={title}
                              />
                            </a>
                          </div>
                        );
                      })}
                    </div>
                  </div>
                )
              }
              <p class="pt-8 leading-relaxed">
                {intro1.content}
              </p>
            </section>
            <!-- //ANCHOR -  Erstellung der Bilder fÃ¼r den Pixelsrick  -->
            <section class="py-8">
              <div class="h2">
                {intro2.title}
              </div>
              <div class="text-3xl">
                {intro2.subtitle}
              </div>
              <section class="py-2">
                {
                  intro2.bilder && (
                    <div class="col-12">
                      <div class="row justify-center lg:justify-normal content-around items-center">
                        {intro2.bilder.map((item, index) => {
                          return (
                            <div class="col-12 lg:col-6 text-center pt-2">
                              <a
                                href={item}
                                data-no-swup
                                class="glightbox"
                                data-gallery="gallery-group-1">
                                <ImageMod
                                  src={item}
                                  width="full"
                                  height="full"
                                  class="mx-auto rounded"
                                  alt={title}
                                />
                                <figcaption class="text-right text-sm">
                                  {intro2.beschreibung}
                                </figcaption>
                              </a>
                            </div>
                          );
                        })}
                      </div>
                    </div>
                  )
                }
                <p class="pb-8 leading-relaxed">
                  {intro2.content}
                </p>
              </section>
            </section>
            <!-- //ANCHOR -  Erstellung der Bilder fÃ¼r den Pixelsrick  -->
            <section class="py-8">
              <div class="h2">
                {intro3.title}
              </div>
              <div class="text-3xl">
                {intro3.subtitle}
              </div>
              <p class="py-4 leading-relaxed">
                {intro3.content}
              </p>
              <section class="py-2">
                {
                  intro3.bilder && (
                    <div class="col-12">
                      <div class="row justify-center lg:justify-normal content-around items-center">
                        {intro3.bilder.map((item, index) => {
                          return (
                            <div class="col-12 lg:col-4 text-center pt-2">
                              <a
                                href={item}
                                data-no-swup
                                class="glightbox"
                                data-gallery="gallery-group-1">
                                <ImageMod
                                  src={item}
                                  width="full"
                                  height="full"
                                  class="mx-auto rounded"
                                  alt={title}
                                />
                                <figcaption class="text-right text-sm">
                                  item.{intro4.beschreibung}
                                </figcaption>
                              </a>
                            </div>
                          );
                        })}
                      </div>
                    </div>
                  )
                }
              </section>
              <!-- //ANCHOR -  Portrait Live Pixelstick Lightpainting -->
              <section class="py-8">
                <div class="h2">
                  {intro4.title}
                </div>
                <div class="text-3xl">
                  {intro4.subtitle}
                </div>
                <p class="py-4 leading-relaxed">
                  {intro4.content}
                </p>
                <section class="py-2">
                  {
                    intro4.bilder && (
                      <div class="col-12">
                        <div class="row justify-center lg:justify-normal content-around items-center">
                          {intro4.bilder.map((item, index) => {
                            return (
                              <div class="col-12 lg:col-3 text-center pt-2">
                                <a
                                  href={item}
                                  data-no-swup
                                  class="glightbox"
                                  data-gallery="gallery-group-1">
                                  <ImageMod
                                    src={item}
                                    width="full"
                                    height="full"
                                    class="mx-auto rounded"
                                    alt={intro4.title}
                                  />
                                </a>
                              </div>
                            );
                          })}
                        </div>
                      </div>
                    )
                  }
                  <p class="text-right pt-2 text-sm">
                    {intro4.note}
                  </p>
                </section>
                <!-- //ANCHOR -  DANKE  -->
                <section class="py-8">
                  <div class="h2">
                    {intro5.title}
                  </div>
                  <div class="text-3xl">
                    {intro5.subtitle}
                  </div>
                  <p class="py-4 leading-relaxed">
                    {intro5.content}
                  </p>
                  <section class="py-2">
                    {
                      intro5.bilder && (
                        <div class="col-12">
                          <div class="row justify-center lg:justify-normal content-around items-center">
                            {intro5.bilder.map((item, index) => {
                              return (
                                <div class="col-12 text-center pt-2">
                                  <a
                                    href={item}
                                    data-no-swup
                                    class="glightbox"
                                    data-gallery="gallery-group-1">
                                    <ImageMod
                                      src={item}
                                      width="full"
                                      height="full"
                                      class="mx-auto rounded"
                                      alt={title}
                                    />
                                  </a>
                                </div>
                              );
                            })}
                          </div>
                        </div>
                      )
                    }
                    <p class="text-right pt-2 text-sm">
                      {intro5.note}
                    </p>
                  </section>
                </section>
              </section>
            </section>
          </div>
        </article>
      </div>
    </div>
  </section>
</Base>
