---
import Base from "@/layouts/Base.astro";
import { getSinglePage } from "@/lib/contentParser.astro";
import PageHeader from "@/partials/PageHeader.astro";
import { getEntry } from "astro:content";
import ProjectCard from "@/components/ProjectCardIgotshotLifetimeTV.astro";
import ImageMod from "@/components/ImageMod.astro";
import DynamicIcon from "@/helpers/DynamicIcon";

const {
  body,
  render,
  data: { title, meta_title, description, image, keywords },
} = await getEntry("tv-emmering", "-index");

const COLLECTION_FOLDER = "tv-emmering";
const projects = await getSinglePage(COLLECTION_FOLDER);
const { Content } = await render();

const categories: string[] = [];
projects.map(
  (project) => project.data.category && categories.push(project.data.category),
);
const uniqCategories = [...new Set([...categories])];
---

<Base
  title={title}
  image={image}
  keywords={keywords}
  meta_title={meta_title}
  description={description}
  body_class="page-color-dark-igotshot page-color-light-igotshot">
  <PageHeader title={title} />
  <section class="">
    <div class="container">
      <h2 class="text-center py-4">{description}</h2>
      <ImageMod
        alt="TV Emmering"
        class="md:h-[450px] h-[250px] w-full rounded object-cover object-center"
        src={image}
      />
      <p class="pt-4">
        TV Emmering • Bilder und Erinnerungen aus dem Verein und die
        Veranstaltungen des Turnverein Emmering 1898 e.V. aus der
        Leichtathletik, Turnen und des Taekwondo vom Vereinsfotografen Michael
        Campos Viola.
      </p>
      <h2 class="py-4">Geschützter Bereich - Mappenpräsentation</h2>
      <p>
        Dieser Bereich ist für den vereinsinternen Gebrauch vorgesehen. Hier
        können sich die Sportler oder deren Eltern anmelden, um die gesamten
        Bilder aus ihren Abteilungen kostenlos herunterzuladen.
      </p>
      <!-- Leistung icons -->
      <div class="mx-6 py-10 justify-center">
        <div
          class="grid gap-4 grid-cols-2 md:grid-cols-3 lg:grid-cols-5 object-center">
          <div class="py-4 text-center">
            <p class="text-6xl">13</p>
            <p>umgesetze Projekte</p>
          </div>
          <div class="py-4 text-center">
            <p class="text-6xl">2</p>
            <p>igot</p>
          </div>
          <div class="py-4 text-center">
            <p class="text-6xl">1</p>
            <p>Kino Projekt</p>
          </div>
          <div class="py-4 text-center">
            <p class="text-6xl">337</p>
            <p>Stunden</p>
          </div>
          <div class="py-4 text-center">
            <p class="text-6xl">5632</p>
            <p>Bilder</p>
          </div>
        </div>
        <div class="text-right uppercase">
          <p class="text-xl">
            Aus unterstüzung für den TV Emmering seit April 2022
          </p>
        </div>
      </div>
      <!-- Blog -->
      <div class="row gy-4">
        <div class="col-12">
          {
            uniqCategories && (
              <ul class="flex flex-wrap justify-start md:justify-center gap-2 md:gap-x-4 gap-y-4">
                <li>
                  <button
                    class="transition group block px-6 py-[.18rem] border border-igot rounded-full text-base hover:bg-igot hover:text-white [&.active]:bg-igot [&.active]:text-white active"
                    data-clear-filter-btn="all">
                    <DynamicIcon
                      className="inline-block group-[.active]:!text-white group-hover:!text-white"
                      icon="TfiReload"
                    />
                  </button>
                </li>
                {uniqCategories.map((category) => (
                  <li>
                    <button
                      class="filter-btn transition block px-6 py-1.5 border border-igot rounded-full text-sm md:text-base hover:bg-igot hover:text-white [&.active]:bg-igot [&.active]:text-white"
                      data-type-filter-btn={category}
                      set:html={category}
                    />
                  </li>
                ))}
              </ul>
            )
          }
        </div>
        <div class="col-12">
          <div id="projects-filter" class="row pt-8 gy-4">
            {
              projects.map((project) => {
                return (
                  <div
                    class="md:col-12 lg:col-3"
                    data-filter-type={project.data.category}>
                    <ProjectCard content={project} />
                  </div>
                );
              })
            }
          </div>
        </div>
      </div>
      <!-- //ANCHOR - Beschreibung TV Emmering -->
      <div class="text-center py-8">
        <h2>
          TV Emmering seit 125 Jahre der Turnverein<br />in Landkreis
          Fürstenfeldbruck
        </h2>
      </div>
      <div
        class="flex flex-col md:flex-row justify-between items-start py-8 gap-4">
        <div class="w-full md:w-1/2 flex flex-col justify-center">
          <p>
            Der TV Emmering im Landkreis Fürstenfeldbruck, der seit 125 Jahren
            besteht, ist ein wichtiger Teil der Gemeinschaft und hat eine lange
            Geschichte voller Erfolge, Herausforderungen und Engagement für
            seine Mitglieder und in der Gemeinde.
          </p>
          <p>
            Seine Ursprünge liegen in 1898, als eine Gruppe von begeisterten
            Emmeringer beschloss, sich zusammenzuschließen und eine Organisation
            zu gründen, die den Sport in ihrer Gemeinde fördern würde. Über die
            Jahre hinweg hat der Verein viele Veränderungen durchgemacht,
            darunter neue Sportarten, Erweiterungen der Anlagen und die
            Einführung moderner Trainingsmethoden.
          </p>
          <p>
            Heite ist der Verein ein wichtiger Teil des Sports in der Gemeinde
            und bietet eine breite Palette von Aktivitäten für Menschen jeden
            Alters und jeder Fitnessstufe an. Die Mitglieder können aus einer
            Vielzahl von Sportarten wählen, darunter Aerobic, Badminton, Boogie
            Woogie, Fitnesstraining, Gymnastik, Inline-Skaten, Kindersport,
            Leichtathletik, Mountain Biking, Nordic Walking, Pilates, QI Gong,
            Segeln, Taekwondo, Turnen und Volleyball.
          </p>
        </div>
        <div class="w-full md:w-1/2 flex flex-col justify-between">
          <p>
            Der Verein verfügt über erstklassige Einrichtungen, darunter mehrere
            Sportplätze und Hallen, die regelmäßig gepflegt und modernisiert
            werden. Es gibt auch ein engagiertes Team von Trainern und
            Betreuern, die den Mitgliedern helfen, ihre Fähigkeiten und
            Leistungen zu verbessern.
          </p>
          <p>
            Der Sportverein spielt auch eine wichtige Rolle in der Gemeinschaft
            und organisiert regelmäßig Veranstaltungen und Turniere, die
            Teilnehmer aus der ganzen Region anziehen. Diese Veranstaltungen
            fördern den Wettbewerb und bieten eine Gelegenheit für Menschen,
            sich zu treffen, zu feiern und Spaß zu haben.
          </p>
          <p>
            den letzten 125 Jahren hat der Sportverein viele Meisterschaften und
            Auszeichnungen gewonnen und ist zu einem wichtigen Teil des Sports
            und der Gemeinschaft in der Region geworden. Mit einer starken
            Tradition und einem engagierten Team von Mitgliedern und Trainern
            wird er auch in Zukunft eine wichtige Rolle spielen und die Menschen
            dazu inspirieren, gesund und aktiv zu bleiben.
          </p>
        </div>
      </div>
